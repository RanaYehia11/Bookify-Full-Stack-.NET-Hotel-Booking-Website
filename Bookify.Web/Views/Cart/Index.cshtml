@model List<ReservationCartItem>

@{
    ViewData["Title"] = "Your Cart";
    Layout = "~/Views/Shared/_Layout.cshtml"; ;

    var cartItems = Model;
    int cartCount = cartItems.Count;

    decimal totalPrice = cartItems.Sum(i => i.TotalPrice());
}

<section class="h-100 h-custom" style="background-color: #f5f5f5;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12">
                <div class="card card-registration" style="border-radius: 15px;">
                    <div class="card-body p-0">
                        <div class="row g-0">

                            <!-- LEFT SIDE - CART ITEMS -->
                            <div class="col-lg-8">
                                <div class="p-5">

                                    <div class="d-flex justify-content-between align-items-center mb-5">
                                        <h1 class="fw-bold mb-0">Shopping Cart</h1>
                                        <h6 class="mb-0 text-muted">@cartCount items</h6>
                                    </div>

                                    <hr class="my-4">

                                    @if (cartItems.Any())
                                    {
                                        foreach (var item in cartItems)
                                        {
                                            <div class="row mb-4 d-flex justify-content-between align-items-center">

                                                <!-- Room Image -->
                                                <div class="col-md-2">
                                                    <img src="/images/room/room-@(item.RoomId).jpg" class="img-fluid rounded-3" />
                                                </div>

                                                <!-- Room Info -->
                                                <div class="col-md-3">
                                                    <h6 class="text-muted">Room</h6>
                                                    <h6 class="mb-0">@item.RoomName</h6>
                                                    <small>@item.CheckIn.ToString("dd MMM") → @item.CheckOut.ToString("dd MMM")</small>
                                                    <br />
                                                    <small class="text-muted">Nights: @item.Nights()</small>
                                                </div>

                                                <!-- Quantity Controls -->
                                                <div class="col-md-3 d-flex align-items-center">

                                                    <!-- Decrease -->
                                                    <form asp-controller="Cart" asp-action="Decrease" method="post">
                                                        <input type="hidden" name="roomId" value="@item.RoomId" />
                                                        <input type="hidden" name="checkIn" value="@item.CheckIn.ToString("o")" />
                                                        <input type="hidden" name="checkOut" value="@item.CheckOut.ToString("o")" />
                                                        <button class="btn btn-outline-secondary">-</button>
                                                    </form>

                                                    <span class="mx-3">@item.Quantity</span>

                                                    <!-- Increase -->
                                                    <form asp-controller="Cart" asp-action="Increase" method="post">
                                                        <input type="hidden" name="roomId" value="@item.RoomId" />
                                                        <input type="hidden" name="checkIn" value="@item.CheckIn.ToString("o")" />
                                                        <input type="hidden" name="checkOut" value="@item.CheckOut.ToString("o")" />
                                                        <button class="btn btn-outline-secondary">+</button>
                                                    </form>

                                                </div>

                                                <!-- Total Price -->
                                                <div class="col-md-2">
                                                    <h6>€ @item.TotalPrice()</h6>
                                                </div>

                                                <!-- Delete -->
                                                <div class="col-md-1 text-end">
                                                    <form asp-controller="Cart" asp-action="Remove" method="post">
                                                        <input type="hidden" name="roomId" value="@item.RoomId" />
                                                        <input type="hidden" name="checkIn" value="@item.CheckIn.ToString("o")" />
                                                        <input type="hidden" name="checkOut" value="@item.CheckOut.ToString("o")" />
                                                        <button class="btn btn-outline-danger">×</button>
                                                    </form>
                                                </div>

                                            </div>

                                            <hr class="my-4" />
                                        }
                                    }
                                    else
                                    {
                                        <p class="text-center text-muted">Your cart is empty.</p>
                                    }

                                    <div class="pt-5">
                                        <a href="~/Home/Index" class="btn btn-outline-dark btn-lg">← Back to Home</a>
                                    </div>

                                </div>
                            </div>

                            <!-- RIGHT SIDE - SUMMARY -->
                            <div class="col-lg-4 bg-light">
                                <div class="p-5">

                                    <h3 class="fw-bold mb-5 mt-2 pt-1">Summary</h3>

                                    <hr class="my-4">

                                    <div class="d-flex justify-content-between mb-4">
                                        <h5 class="text-uppercase">Items</h5>
                                        <h5>@cartCount</h5>
                                    </div>

                                    <div class="d-flex justify-content-between mb-4">
                                        <h5>Total</h5>
                                        <h5>€ @totalPrice</h5>
                                    </div>

                                    <form method="get" asp-controller="Payment" asp-action="Index">
                                        <button type="submit" class="btn btn-gradient btn-lg w-100">Proceed to Checkout</button>
                                    </form>




                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<style>
    .cart-item input.days-input {
        text-align: center;
    }

    .btn-decrease, .btn-increase {
        width: 35px;
        height: 35px;
        font-size: 18px;
        padding: 0;
        margin: 0 5px;
    }

    .btn-delete-item {
        width: 35px;
        height: 35px;
        font-size: 20px;
        padding: 0;
    }

    /* Gradient Button */
    .btn-gradient {
        background: linear-gradient(135deg, #f59e0b, #d97706);
        color: white;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-gradient:hover {
            background: linear-gradient(135deg, #d97706, #b45309);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }
</style>



