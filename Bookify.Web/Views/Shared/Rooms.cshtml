@model IEnumerable<Bookify.Data.Models.Room>

@{
    ViewData["Title"] = "Rooms Page";
}

<section class="rooms-section spad">
    <div class="container">
        @if (Model != null && Model.Any())
        {
            <div class="row">
                @foreach (var room in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="room-item">
                            <img src="~/images/room/room-@(room.Id).jpg" alt="@room.RoomType?.Name" />
                            <div class="ri-text">
                                <h4>@room.RoomType?.Name</h4>
                                <h3>@room.RoomType?.PricePerNight $ <span>/Per night</span></h3>
                                <p><strong>Room Number:</strong> @room.RoomNumber</p>
                                <a href="/Room/Details/@room.Id" class="primary-btn">More Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <h4 class="text-muted">No rooms available at the moment.</h4>
            </div>
        }
    </div>
</section>

<style>
    .room-item img {
        width: 100%;
        height: 250px;
        object-fit: cover;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.15);
    }

    .room-item {
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        background: #fff;
        border-radius: 12px;
        overflow: hidden;
        transition: transform 0.3s ease;
    }

        .room-item:hover {
            transform: translateY(-5px);
        }
</style>
