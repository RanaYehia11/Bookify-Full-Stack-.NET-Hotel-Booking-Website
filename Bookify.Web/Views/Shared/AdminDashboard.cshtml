@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_Layout";
}

<section class="admin-dashboard spad">
    <div class="container">
        <h2 class="text-center mb-5" style="color:#8B4513;">Admin Dashboard</h2>

        <div class="row">

            <!-- Manage Room Types -->
            <div class="col-lg-4 col-md-6 mb-4">
                <a href="@Url.Action("RoomTypesGrid", "RoomType")" class="dashboard-link">
                    <div class="dashboard-item text-center">
                        <i class="fa fa-list-alt fa-3x mb-3"></i>
                        <h4>Manage Room Types</h4>
                    </div>
                </a>
            </div>

            <!-- Manage Rooms -->
            <div class="col-lg-4 col-md-6 mb-4">
                <a href="@Url.Action("RoomsGrid", "RoomsAdmin")" class="dashboard-link">
                    <div class="dashboard-item text-center">
                        <i class="fa fa-bed fa-3x mb-3"></i>
                        <h4>Manage Rooms</h4>
                    </div>
                </a>
            </div>

            <!-- View Bookings -->
            <div class="col-lg-4 col-md-6 mb-4">
                <a href="@Url.Action("Bookings", "Bookings")" class="dashboard-link">
                    <div class="dashboard-item text-center">
                        <i class="fa fa-calendar-check-o fa-3x mb-3"></i>
                        <h4>View Bookings</h4>
                    </div>
                </a>
            </div>

            <!-- Reset Bookings -->
            <div class="col-lg-4 col-md-6 mb-4">
                <form asp-controller="Payment" asp-action="ResetBookings" method="post" class="dashboard-link">
                    <button type="submit" class="dashboard-item text-center reset-btn-card" style="width:100%; border:none; background:none;">
                        <i class="fa fa-refresh fa-3x mb-3" style="color:#D2A679;"></i>
                        <h4 style="color:#D2A679;">Reset All Bookings</h4>
                    </button>
                </form>
            </div>

        </div>
    </div>
</section>

<style>
    /* Card style */
    .dashboard-link {
        text-decoration: none;
    }

    .dashboard-item {
        background: #fff;
        padding: 40px 20px;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease, background-color 0.3s ease;
        color: inherit;
    }

        .dashboard-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.2);
            background-color: #f9f5f0;
        }

        .dashboard-item i {
            color: #D2A679; /* lighter brown */
        }

        .dashboard-item h4 {
            margin-top: 15px;
            margin-bottom: 0;
            font-weight: 600;
        }

   
</style>
