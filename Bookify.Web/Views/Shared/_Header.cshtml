<!-- Offcanvas Menu Section Begin -->
<div class="offcanvas-menu-overlay"></div>
<div class="canvas-open">
    <i class="icon_menu"></i>
</div>
<div class="offcanvas-menu-wrapper">
    <div class="canvas-close">
        <i class="icon_close"></i>
    </div>
    <div class="header-configure-area"></div>
    <nav class="mainmenu mobile-menu">
        <ul>
            @{
                var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
                var currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
                var currentArea = ViewContext.RouteData.Values["area"]?.ToString() ?? "";
                var currentPage = ViewContext.RouteData.Values["page"]?.ToString() ?? "";
            }

            <li class="active"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-controller="Room" asp-action="Rooms">Rooms</a></li>
            <li><a asp-controller="About" asp-action="AboutUs">About Us</a></li>
            <li><a asp-controller="Contact" asp-action="Contact">Contact</a></li>

            @* ✅ يظهر فقط لو المستخدم أدمن *@
            @if (User.IsInRole("Admin"))
            {
                <li><a asp-controller="Admin" asp-action="Index">Admin Dashboard</a></li>
            }

            @if (User.Identity.IsAuthenticated)
            {
              /*  @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
                {
                    <li class="submenu">
                        <a href="#"><i class="fa fa-shopping-cart"></i> Cart</a>
                        <ul class="dropdown-list">
                            <li>
                                <a asp-controller="Cart" asp-action="Index">
                                    <i class="fa fa-eye"></i> View Cart
                                </a>
                            </li>
                        </ul>
                    </li>
                }*/

                <li class="submenu">
                    <a href="#"><i class="fa fa-user"></i> Profile</a>
                    <ul class="dropdown-list">
                        <li>
                            <a asp-controller="Profile" asp-action="Index">
                                <i class="fa fa-id-card"></i> View Profile
                            </a>
                        </li>
                        <li>
                            <form asp-area="Identity" asp-page="/Account/Logout" method="post" style="display:inline;">
                                <button type="submit" class="dropdown-item" style="border:none; background:none; color:#000;">
                                    <i class="fa fa-sign-out"></i> Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </li>
                @if (!User.IsInRole("Admin"))
                {
                    @await Component.InvokeAsync("CartDropdown")

                }
               /* <!-- Mini Cart Dropdown for Offcanvas -->
                @await Component.InvokeAsync("CartDropdown")*/

            }
            else
            {
                <li><a asp-area="Identity" asp-page="/Account/Login">Login</a></li>
                <li><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>
            }
        </ul>
    </nav>

    <div id="mobile-menu-wrap"></div>
    <div class="top-social">
        <a href="#"><i class="fa fa-facebook"></i></a>
        <a href="#"><i class="fa fa-twitter"></i></a>
        <a href="#"><i class="fa fa-tripadvisor"></i></a>
        <a href="#"><i class="fa fa-instagram"></i></a>
    </div>
    <ul class="top-widget">
        <li><i class="fa fa-phone"></i> (12) 345 67890</li>
    </ul>
</div>
<!-- Offcanvas Menu Section End -->
<!-- Header Section Begin -->
<header class="header-section">
    <div class="menu-item">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-2 d-flex justify-content-start">
                    <div class="logo">
                        <a asp-controller="Home" asp-action="Index">
                            <img src="~/images/logo.png" alt="logo" style="width:250px; height:auto;" />
                        </a>
                    </div>
                </div>
                <div class="col-lg-10">
                    <div class="nav-menu">
                        <nav class="mainmenu">
                            <ul>
                                <li class="@(currentController == "Home" ? "active" : "")">
                                    <a asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="@(currentController == "Room" ? "active" : "")">
                                    <a asp-controller="Room" asp-action="Rooms">Rooms</a>
                                </li>
                                <li class="@(currentController == "About" ? "active" : "")">
                                    <a asp-controller="About" asp-action="AboutUs">About Us</a>
                                </li>
                                <li class="@(currentController == "Contact" ? "active" : "")">
                                    <a asp-controller="Contact" asp-action="Contact">Contact</a>
                                </li>

                                @if (User.IsInRole("Admin"))
                                {
                                    <li><a asp-controller="Admin" asp-action="Index">Admin Dashboard</a></li>
                                }

                                @if (User.Identity.IsAuthenticated)
                                {
                                    

                                    @if (!User.IsInRole("Admin"))
                                    {
                                        @await Component.InvokeAsync("CartDropdown")

                                    }

                                    <li class="dropdown @(currentController == "Profile" ? "active" : "")">
                                        <a href="#" class="dropdown-toggle" data-bs-toggle="dropdown" style="outline:none; border:none; box-shadow:none;">
                                            <i class="fa fa-user"></i> Profile <i class="fa fa-caret-down"></i>
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a class="dropdown-item" asp-controller="Profile" asp-action="Index">
                                                    <i class="fa fa-id-card"></i> View Profile
                                                </a>
                                            </li>
                                            <li>
                                                <form asp-area="Identity" asp-page="/Account/Logout" method="post" style="display:inline;">
                                                    <button type="submit" class="dropdown-item">
                                                        <i class="fa fa-sign-out"></i> Logout
                                                    </button>
                                                </form>
                                            </li>
                                        </ul>
                                    </li>
                                }
                                else
                                {
                                    <li class="@(currentArea == "Identity" && currentPage == "/Account/Login" ? "active" : "")">
                                        <a asp-area="Identity" asp-page="/Account/Login">Login</a>
                                    </li>
                                    <li class="@(currentArea == "Identity" && currentPage == "/Account/Register" ? "active" : "")">
                                        <a asp-area="Identity" asp-page="/Account/Register">Register</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</header>
<!-- Header End -->
