@model Bookify.Web.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
    Layout = "_Layout";
}

<section class="spad">
    <div class="container">
        <h2 class="text-center mb-4" style="color:#8B4513;">Change Password</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        <form asp-action="ChangePassword" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label class="form-label">Current Password</label>
                <input asp-for="CurrentPassword" type="password" class="form-control" />
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">New Password</label>
                <input asp-for="NewPassword" type="password" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Confirm New Password</label>
                <input asp-for="ConfirmNewPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <p class="mb-2"><strong>Password Requirements:</strong></p>
                <ul id="passwordCriteria" class="list-unstyled small">
                    <li id="crit-length" class="text-danger">- Minimum 6 characters</li>
                    <li id="crit-uppercase" class="text-danger">- Must contain at least one uppercase letter (A-Z)</li>
                    <li id="crit-digit" class="text-danger">- Must contain at least one digit (0-9)</li>
                    <li id="crit-nonalnum" class="text-danger">- Must contain at least one special character (example: ! @@ $ %)</li>
                </ul>
            </div>

            <button type="submit" class="btn btn-primary">Change Password</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Optional: live password criteria check
        const newPassword = document.getElementById("NewPassword");
        const critLength = document.getElementById("crit-length");
        const critUpper = document.getElementById("crit-uppercase");
        const critDigit = document.getElementById("crit-digit");
        const critNonAlnum = document.getElementById("crit-nonalnum");

        newPassword?.addEventListener("input", function () {
            const val = this.value;
            critLength.classList.toggle("text-success", val.length >= 6);
            critLength.classList.toggle("text-danger", val.length < 6);

            critUpper.classList.toggle("text-success", /[A-Z]/.test(val));
            critUpper.classList.toggle("text-danger", !/[A-Z]/.test(val));

            critDigit.classList.toggle("text-success", /\d/.test(val));
            critDigit.classList.toggle("text-danger", !/\d/.test(val));

            critNonAlnum.classList.toggle("text-success", /[^a-zA-Z0-9]/.test(val));
            critNonAlnum.classList.toggle("text-danger", !/[^a-zA-Z0-9]/.test(val));
        });
    </script>
}
